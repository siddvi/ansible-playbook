---

- name: run task on node
  hosts: node
  tasks:
   - name: ensure a file exits
     copy:
       dest: "/home/{{ ec2-user }}/test_file"
       content: "{{ ansible_host }}"

   - name: fetch test_file
     fetch:
       scr: "/home/{{ ec2-user }}/test_file"
       dest: "fetched/{{ inventory_hostname }}/"
       flat: true



  